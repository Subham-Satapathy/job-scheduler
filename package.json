{
  "name": "scheduler-microservice",
  "version": "1.0.0",
  "description": "A scalable job scheduler microservice",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:load": "node src/test/load-testing/load-test-runner.js",
    "test:load:basic": "npx artillery run src/test/load-testing/basic-load-test.yml",
    "test:load:rate-limits": "npx artillery run src/test/load-testing/rate-limit-test.yml",
    "test:load:smoke": "npx artillery run src/test/load-testing/smoke-test.yml",
    "test:load:database": "npx artillery run src/test/load-testing/database-performance-test.yml",
    "test:all": "npm run test && npm run test:load",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t scheduler-service .",
    "docker:run": "docker run -p 3000:3000 scheduler-service",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "node scripts/reset-database.js",
    "seed:jobs": "ts-node src/seeders/job.seeder.ts"
  },
  "keywords": [
    "scheduler",
    "microservice",
    "typescript",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "bullmq": "^5.54.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.2",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "postgres": "^3.4.3",
    "rate-limit-redis": "^4.2.1",
    "redis": "^4.6.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/artillery": "^1.7.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "artillery": "^2.0.22",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
